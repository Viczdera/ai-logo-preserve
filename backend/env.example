# Environment variables for the Go backend service

# Server Configuration
SERVER_PORT=8080
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Rate Limiting
RATE_LIMIT_PER_HOUR=500
RATE_LIMIT_BURST=10

# AWS/Cloudflare R2 Configuration
AWS_REGION=auto
AWS_ACCESS_KEY_ID=your_r2_access_key_here
AWS_SECRET_ACCESS_KEY=your_r2_secret_key_here
S3_BUCKET=logo-preserve-images
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=logo-processing
RABBITMQ_QUEUE=detection-jobs

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
